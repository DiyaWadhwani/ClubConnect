<h2 class="text-center mt-20"><%= university.name %></h2>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 600px">
  <form action="<%= '/' + university.universityID + '/edit' %>" method="POST">
    <!-- University Name Field -->
    <div class="mb-4">
      <label class="form-label fw-bold">University Name:</label>
      <input
        class="form-control"
        type="text"
        name="name"
        value="<%= university.name %>"
        placeholder="University Name"
        disabled
      />
    </div>

    <!-- Email Domain Field -->
    <div class="mb-4">
      <label class="form-label fw-bold">Email Domain:</label>
      <input
        class="form-control"
        type="text"
        name="email_domain"
        value="<%= university.emailDomain %>"
        placeholder="e.g., university.edu"
        required
      />
    </div>

    <!-- Website Field -->
    <div class="mb-4">
      <label class="form-label fw-bold">Website:</label>
      <input
        class="form-control"
        type="url"
        name="website"
        value="<%= university.website %>"
        placeholder="https://www.university.edu"
        required
      />
    </div>

    <!-- Address Field -->
    <div class="mb-4">
      <label class="form-label fw-bold">Address:</label>
      <input
        class="form-control"
        type="text"
        name="address"
        value="<%= university.address %>"
        placeholder="1234 Main St"
        required
      />
    </div>

    <!-- City Field -->
    <div class="mb-4">
      <label class="form-label fw-bold">City:</label>
      <input
        class="form-control"
        type="text"
        name="city"
        value="<%= university.city %>"
        placeholder="City"
        required
      />
    </div>

    <!-- State Field -->
    <div class="mb-4">
      <label class="form-label fw-bold">State:</label>
      <input
        class="form-control"
        type="text"
        name="state"
        value="<%= university.state %>"
        placeholder="State"
        required
      />
    </div>

    <!-- ZIP Code Field -->
    <div class="mb-4">
      <label class="form-label fw-bold">ZIP Code:</label>
      <input
        class="form-control"
        type="text"
        name="zip"
        value="<%= university.zipCode %>"
        placeholder="ZIP Code"
        required
      />
    </div>

    <!-- Submit and Delete Buttons -->
    <div class="d-flex justify-content-between mt-4">
      <a class="btn btn-danger" href="<%= '/'%>">Cancel</a>
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
  </form>
</div>
