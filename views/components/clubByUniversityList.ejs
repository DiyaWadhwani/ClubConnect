<h2>Clubs Associated with <%= university.name %>:</h2>

<% if (clubsByUni.length === 0) { %>
<p class="text-muted">No clubs found for this university.</p>
<% } else { %>
<ul class="list-group mb-4">
  <% clubsByUni.forEach((club) => { %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <span><%= club.name %></span>
    <div>
      <!-- Pencil Icon for Edit -->
      <a
        href="<%= '/clubs/' + club.clubID + '/edit' %>"
        class="btn btn-outline-primary btn-sm me-2"
        title="Edit"
      >
        ✎
      </a>
      <!-- Trash Icon for Delete -->
      <a
        href="<%= '/clubs/' + club.clubID + '/delete' %>"
        class="btn btn-outline-danger btn-sm"
        title="Delete"
      >
        🗑️
      </a>
    </div>
  </li>
  <% }) %>
</ul>
<% } %>
